using namespace std;

#define REP(i,p,n) for(ll i=p;i<ll(n);++i)
#define rep(i,n) REP(i,0,n)

using ll = long long int;
using pll = pair<ll, ll>;

const ll mod = static_cast<ll>(1e9) + 7;

int main()
{
    ll N;
    cin >> N;

    vector<ll> A(N);
    rep (i, N) { cin >> A[i]; }

    ll x1 = A{0];
    for (ll i=1;i<
    rep (i, N) { x1 += (i % 2 ? -1 : 1) * A[i]; }

    x1 = x1 >> 1;

    cout << x1 << endl;

    return 0;
}
